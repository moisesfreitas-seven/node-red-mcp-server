# Security Settings
NODE_RED_ENABLE_HTTPS=false
NODE_RED_CREDENTIAL_SECRET=your-secret-key-here

# Performance Settings
NODE_RED_MAX_PAYLOAD_SIZE=50mb
NODE_RED_HTTP_REQUEST_TIMEOUT=120000 